<odoo>
    
    <!--===================Accion que abre la vista de arbol del modelo purchase order line===========================-->
    <record model="ir.actions.act_window" id="purchase_list_action">
        <field name="name">Purchase Order Lines</field>
        <field name="res_model">purchase.order.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first line
            </p>
        </field>
    </record>

    <!--===============Agregamos los campos faltantes a la vista de lista========================================-->
    <record model="ir.ui.view" id="purchse_view_fields">
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_qty']" position="after">
                <field name="qty_invoiced"/>
                <field name="qty_received"/>
                <field name="difference"/>
            </xpath>
        </field>
    </record>

    <!--========================Menu que manda a la accion para abrir la vista de arbol========================-->
    <menuitem id="menu_purchase_line" name="Purchase order lines" parent="purchase.purchase_report" action="purchase_list_action"/>

    <menuitem id="purchase_report_ item" name="Reporting" parent="purchase.purchase_report" sequence="99" groups="purchase.group_purchase_manager" action="purchase.action_purchase_order_report_all"/>

    <!--=============================wizard para calcular los registros anteriores=============================-->
    <!--=============================con su boton de accion, para llamarlo=========================-->
    
    <record model="ir.ui.view" id="wizard_difference_views">
        <field name="name">wizard.form</field>
        <field name="model">difference.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <label string="Calculate difference"/>
                </group>
                <footer>
                    <button name="calculate_difference" type="object" string="Calculate" class="oe_highlight"></button>
                </footer>
            </form>
        </field>        
    </record>

    <act_window id="launch_difference_wizard"
                name="Calculate difference"
                src_model="purchase.order.line"
                res_model="difference.wizard"
                view_mode="form"
                target="new"
                key2="client_action_multi"/>

</odoo>