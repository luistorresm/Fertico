<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
      <template id="addenda_pepsico" name="Pepsico">
        <RequestCFD tipo="AddendaPCO" version="2.0" t-att-idPedido="record.invoice_origin">
          <Documento t-att-folioUUID="record.l10n_mx_edi_cfdi_uuid" tipoDoc="1"/>
          <Proveedor t-att-idProveedor="record.supplier_number"/>
          <Recepciones>
            <Recepcion t-att-idRecepcion="record.id_recepcion">
                  <t t-foreach="record.invoice_line_ids" t-as="line">
                    <Concepto t-att-importe="'%.2f'% round((line.price_unit * line.quantity),2)" t-att-valorUnitario="line.price_unit" t-att-cantidad="line.quantity" t-att-descripcion="line.name" t-att-unidad="line.product_uom_id.name"/>
                  </t>
            </Recepcion>
          </Recepciones>
        </RequestCFD>
      </template>
        <record id="addenda_pepsico" model="ir.ui.view">
            <field name="l10n_mx_edi_addenda_flag">True</field>
        </record>
    </data>
</odoo>
