<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>


        <!--========================================Usuarios==================================-->
        <record id="tree_res_users_migration" model="ir.ui.view">
            <field name="name">res.users.tree</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <tree string="Users">
                    <field name="name"/>
                    <field name="login"/>
                    <field name="lang"/>
                    <field name="login_date"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>   
            </field>
        </record>

        <record id="res_users_migration" model="ir.actions.act_window">
            <field name="name">Pre-aplicaciones</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.users</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a pre-appilcation.
                </p>
            </field>
        </record>

        <record id="tree_res_users_migration_action" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="res_users_migration" />
            <field name="view_id" ref="tree_res_users_migration" />
            <field name="view_mode">tree</field>
        </record>

        <record id="form_res_users_migration_action" model="ir.actions.act_window.view">
            <field name="act_window_id" ref="res_users_migration" />
            <field name="view_id" ref="base.view_users_form" />
            <field name="view_mode">form</field>
        </record>

        <menuitem  name="Usuario v14" action="res_users_migration" id="menu_res_users_migration" parent="base.menu_users" sequence="0"/>

        <!--============================================Ventas=====================================-->

        <record id="view_terms_domain" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='pricelist_id']" position="attributes">
                    <attribute name="invisible">False</attribute>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="attributes">
                    <attribute name="invisible">False</attribute>
                </xpath>
            </field>
        </record>

        <record id="view_employee_readonly" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="groups_id" eval="[(6, 0, [ref('addons_14.group_prices_modify')])]"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='price_unit']" position="attributes">
                    <attribute name="readonly">True</attribute>
                </xpath>
            </field>
        </record>


    </data>

</odoo>
