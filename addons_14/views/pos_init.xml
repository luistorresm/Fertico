<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="pos_session_verify">
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="pos_verify" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='action_pos_session_validate']" position="after">
                <button name="action_pos_session_verified" type="object" string="Validar" attrs="{'invisible' : ['|',('pos_verify', '=', True),('state', '!=', True)]}" class="oe_highlight" groups="point_of_sale.group_pos_manager"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="pos_session_tree_verify">
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="pos_verify" widget="badge" decoration-success="pos_verify == 'verified'"/>
            </xpath>
        </field>
    </record>

</odoo>
