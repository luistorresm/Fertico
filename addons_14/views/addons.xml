<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- =================================Facturas=============================-->

    <record id="view_invoice_editable" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="groups_id" eval="[(6, 0, [ref('addons_14.group_invoice_account')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']" position="replace">
                <field name="line_ids" attrs="{'readonly': [('state','!=', 'draft'),('state','!=', 'posted')]}" >
                    <tree editable="bottom" string="Journal Items">
                        <field name="account_id" domain="[('company_id', '=', parent.company_id)]"/>
                        <field name="name" widget="section_and_note_text"/>
                        <field name="debit" />
                        <field name="credit"/>
                        <field name="tax_tag_ids" widget="many2many_tags"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

    <record id="view_invoice_cancel" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_cancel_posted_moves']" position="attributes">
                <attribute name="groups">addons_14.group_invoice_cancel</attribute>
            </xpath>
            <xpath expr="//field[@name='purchase_vendor_bill_id']" position="attributes">
                <attribute name="domain">[('company_id', '=', company_id),('partner_id','child_of', [partner_id]),('purchase_order_id','!=', None)]</attribute>
            </xpath>
        </field>
    </record>

    <!-- ==============================Apuntes contables====================================-->

    <record id="view_tree_account_line" model="ir.ui.view">
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='analytic_account_id']" position="after">
                <field name="x_studio_field_KXQlu"/>
                <field name="quantity"/>
            </xpath>
        </field>
    </record>

</odoo>