<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="Load pricelist xls">
        <field name="name">Load pricelist from file</field>
        <field name="model">pricelist.load.xls</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="excel_file"/>
                </group>
                <footer>
                    <button string="Cancel" special="cancel" class="oe_highlight"/>
                    <button name="import_pricelist" string="Submit" type="object" class="oe_highlight" />
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_wizard_price_list" name="Load pricelist xls" res_model="pricelist.load.xls" view_mode="form" target="new" multi="True" />

    <menuitem id="menu_price_list_xls" name="Load pricelist from file" parent="sale.product_menu_catalog" action="action_wizard_price_list"/>

</odoo>