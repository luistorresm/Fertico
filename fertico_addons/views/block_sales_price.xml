<odoo>

    <record model="ir.ui.view" id="sale_order_block_price">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='price_unit']" position="replace">
                <field name='price_unit' readonly="0"/>
            </xpath>
        </field>
    </record>


    <record id="view_employee_readonly" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_order_block_price" />
        <field name="groups_id" eval="[(6, 0, [ref('fertico_addons.group_prices_modify_f')])]"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='price_unit']" position="attributes">
                <attribute name="readonly">True</attribute>
            </xpath>
        </field>
    </record>

</odoo>
